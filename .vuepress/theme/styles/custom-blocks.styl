.custom-block
  position relative
  .title
    font-weight 600
    margin-bottom -0.4rem
    padding-top 0.5rem
    &:empty
      padding-top 0
  &.tip, &.warning, &.danger
    padding .5rem 1.5rem .3rem 2.5rem
    border: 1px solid
    border-radius 8px
    margin 1rem 0
    &::before
      content: "â“˜";
      position: absolute;
      font-weight: 600;
      font-size: 15px;
      top: 22px;
      left: 17px;
  &.tip
    background-color var(--block-color)
    border-color #67cc86
    &::before
      color #67cc86
  &.warning
    background-color var(--block-color)
    border-color #ffc517
    &:before
      color #ffc517
  &.danger
    background-color var(--block-color)
    border-color #f26d6d
    &:before
      color #f26d6d
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right
  &.theorem
    margin 1rem 0
    padding .1rem 1.5rem
    border-radius 0.4rem
    background-color var(--block-color)
    .title
      font-weight bold
  &.details
    display block
    position relative
    border-radius 8px
    margin 1em 0
    padding 1rem
    background-color var(--block-color)
    box-shadow 0 3px 12px rgba(0, 0, 0, .07), 0 1px 4px rgba(0, 0, 0, .07);
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
